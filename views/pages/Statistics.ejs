<html>

<head>
  <title>Email service</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
  <div style="margin:50px;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#"><span class="h4">Email Scheduler</span></a>
      <div class="navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <!-- <li class="nav-item">
            <a class="nav-link" href="/terms&service">Terms and conditions</a>
          </li> -->
          <li class="nav-item active">
            <a class="nav-link" href="/statistics">Statistics</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="jumbotron">
      <div class="row" style="padding:40px;">
        <div class="col">
          <div style="height:480px; overflow-y: scroll;">
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">User</th>
                  <th scope="col">Count</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(user, index) { %>
                  <tr>
                    <th scope="row">
                      <%= user.user.name %>
                    </th>
                    <td>
                      <%= user.count %>
                    </td>
                  </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
          <div class="h5" style="margin-top:10px;margin-bottom:20px;">Total count: <span class="h4">
              <%= total %>
            </span></div>
        </div>
        <div class="col">
          <img src="/images/image.jpeg" alt="mainImage" width="640" height="500" style="border-radius:5px;">
        </div>
      </div>
    </div>
  </div>
</body>

</html>